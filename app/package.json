{
  "name": "215RegEx",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "lint": "eslint .",
    "test": "meteor test --driver-package practicalmeteor:mocha --port 3100",
    "jsdoc": "./node_modules/.bin/jsdoc -c ./jsdoc.json -R ../README.md -r .",
    "jsdoc-ink": "./node_modules/.bin/jsdoc -c ./jsdoc-ink.json -t ./node_modules/ink-docstrap/template -R ../README.md -r ."
  },
  "dependencies": {
    "bootstrap": "^3.3.6",
    "dotenv": "^2.0.0",
    "highcharts": "^4.2.5",
    "meteor-node-stubs": "~0.2.0",
    "moment": "^2.13.0",
    "xregexp": "^3.1.0"
  },
  "devDependencies": {
    "docdash": "^0.3.0",
    "es6-enum": "^1.0.3",
    "eslint": "^2.7.0",
    "eslint-config-airbnb": "^7.0.0",
    "eslint-plugin-jsx-a11y": "^0.6.2",
    "eslint-plugin-meteor": "^3.4.0",
    "eslint-plugin-react": "^4.3.0",
    "ink-docstrap": "^1.1.4",
    "jsdoc": "^3.4.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb/base",
      "plugin:meteor/recommended"
    ],
    "rules": {
      "meteor/eventmap-params": [
        2,
        {
          "eventParamName": "event",
          "templateInstanceParamName": "instance"
        }
      ],
      "meteor/template-names": [
        0
      ]
    }
  }
}
