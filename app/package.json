{
  "name": "215RegEx",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "lint": "eslint .",
    "test": "meteor test --driver-package practicalmeteor:mocha --port 3100",
    "test-watch": "meteor test --driver-package practicalmeteor:mocha --port 3100",
    "jsdoc": "./node_modules/.bin/jsdoc -c ./jsdoc.json -R ../README.md -r ."
  },
  "dependencies": {
    "meteor-node-stubs": "~0.2.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "docdash": "^0.3.0",
    "es6-enum": "^1.0.3",
    "eslint": "^2.10.2",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.6.1",
    "eslint-plugin-jsx-a11y": "^1.0.4",
    "eslint-plugin-meteor": "^3.5.2",
    "eslint-plugin-react": "^5.1.1",
    "ink-docstrap": "^1.1.4",
    "jsdoc": "^3.4.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb/base",
      "plugin:meteor/recommended"
    ],
    "rules": {
      "meteor/eventmap-params": [
        2,
        {
          "eventParamName": "event",
          "templateInstanceParamName": "instance"
        }
      ],
      "meteor/template-names": [
        0
      ]
    }
  }
}
